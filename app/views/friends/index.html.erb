<% if user_signed_in? %>

<table class="table table-striped table-hover table-bordered">
  <thead class ="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User ID</th>
      <th></th>
    </tr>
  </thead>
  <% @friends.each do |friend| %>
  <% if friend.user == current_user %>
    <tr>
      <td>
        <%= link_to friend.first_name + ' ' + friend.last_name, friend%>
      </td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td><%= friend.user_id %></td>
      <td align= "center"><%= link_to 'Delete', friend, class: "btn btn-outline-danger btn-small", data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete your friend?'}  %></td>
    </tr>
    <% end %>
    <% end %> 
  </table>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>

<% else %>
<h1>Test header</h1>
<p>This is my first rails webpage....</p>
<% end %>
